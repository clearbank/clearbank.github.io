{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "BacsUnappliedCreditReceivedV3",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "CreditorInformation": {
      "title": "Creditor Information",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "#/definitions/BacsAccountIdentifier"
        }
      ]
    },
    "DebtorInformation": {
      "title": "Debtor Information",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "#/definitions/BacsAccountIdentifier"
        }
      ]
    },
    "Reference": {
      "title": "Reference",
      "type": [
        "null",
        "string"
      ],
      "description": "Bacs Payment Transaction Reference",
      "maxLength": 18,
      "minLength": 0,
      "pattern": "^([A-Z]*[a-z]*[0-9]*\\.*\\&*\\/*-*\\s*)*$"
    },
    "Amount": {
      "title": "Amount",
      "type": "number",
      "description": "Transaction Amount",
      "format": "decimal"
    },
    "ProcessingDate": {
      "title": "Processing Date",
      "type": "string",
      "description": "Date Processed.",
      "format": "date-time"
    },
    "TransactionCode": {
      "title": "Transaction Code",
      "type": [
        "null",
        "string"
      ],
      "description": "TransactionCode\r\n- RA  – Automated return of unapplied credits"
    },
    "Status": {
      "title": "Status",
      "$ref": "#/definitions/BacsTransactionStatusType"
    },
    "ServiceUserNumber": {
      "title": "Service User Number",
      "type": [
        "null",
        "string"
      ],
      "description": "Integrator’s Unique Identifier registered with BACS",
      "maxLength": 6,
      "minLength": 0
    },
    "ReasonCode": {
      "title": "Reason Code",
      "type": [
        "null",
        "string"
      ],
      "description": "ReasonCode\r\n- 0 – Invalid details\r\n- 2 – Beneficiary deceased\r\n- 3 – Account transferred\r\n- 5 – No account\r\n- B – Account closed\r\n- C – Requested by Remitter\r\nFor more information about reason codes, refer to Appendix 4 of The Payment Service Provider’s Guide and Rules to the Bacs Direct Credit Scheme.",
      "maxLength": 1,
      "minLength": 0,
      "pattern": "(0|2|3|5|B|C)"
    },
    "Source": {
      "title": "Source",
      "description": "Origination of the endpoint",
      "oneOf": [
        {
          "$ref": "#/definitions/BacsEventSource"
        }
      ]
    },
    "BacsTransactionId": {
      "title": "Bacs Transaction Id",
      "type": "string",
      "format": "guid",
      "maxLength": 36,
      "minLength": 0
    }
  },
  "definitions": {
    "BacsAccountIdentifier": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "AccountName": {
          "title": "Account Name",
          "type": [
            "null",
            "string"
          ],
          "maxLength": 18,
          "minLength": 0
        },
        "SortCode": {
          "title": "Sort Code",
          "type": [
            "null",
            "string"
          ],
          "maxLength": 6,
          "minLength": 0
        },
        "AccountNumber": {
          "title": "Account Number",
          "type": [
            "null",
            "string"
          ],
          "maxLength": 8,
          "minLength": 0
        }
      }
    },
    "BacsTransactionStatusType": {
      "type": "string",
      "description": "",
      "x-enumNames": [
        "Pending",
        "Processed"
      ],
      "enum": [
        "Pending",
        "Processed"
      ]
    },
    "BacsEventSource": {
      "type": "string",
      "description": "",
      "x-enumNames": [
        "Bacs"
      ],
      "enum": [
        "Bacs"
      ]
    }
  }
}