                "type": "object",
                "properties": {
                    "account": {
                        "$ref": "#/components/schemas/ClearBank.FI.API.Versions.V3.Models.Response.Accounts.Account"
                    },
                    "halLinks": {
                        "description": "Hypermedia links",
                        "uniqueItems": false,
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ClearBank.FI.API.Versions.V3.Models.Response.HalLink"
                        }
                    }
                }
            },
