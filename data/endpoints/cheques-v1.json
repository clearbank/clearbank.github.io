{
  "openapi": "3.0.1",
  "info": {
    "title": "ClearBank Financial Institutions API",
    "description": "ClearBank cheque endpoint.",
    "version": "1.0Cheques"
  },
  "paths": {
    "/v1/submitDeposit": {
      "post": {
        "tags": [
          "Deposit a cheque"
        ],
        "description": "Submit deposit.",
        "operationId": "submitDeposit",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Your API token, retrieved from the web portal.",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "DigitalSignature",
            "in": "header",
            "description": "Signed hash of the body of the request. The hash is signed by your private key.",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Request-Id",
            "in": "header",
            "description": "A unique identifier for the request.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Submit deposit request",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/submitDepositRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Submit deposit response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/submitDepositResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request.",
            "content": {
              "application/json": {
                  "schema": {
                      "$ref": "#/components/schemas/ProblemDetails"
                  }
              }
          }
          },
          "503": {
            "description": "Service unavailable.",
            "content": {
              "application/json": {
                  "schema": {
                      "$ref": "#/components/schemas/ProblemDetails"
                  }
              }
          }
          },
          "500": {
            "description": "Internal Server Error. The request could not be processed.",
            "content": {
              "application/json": {
                  "schema": {
                      "$ref": "#/components/schemas/ProblemDetails"
                  }
              }
          }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                  "schema": {
                      "$ref": "#/components/schemas/ProblemDetails"
                  }
              }
          }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "beneficiary": {
        "type": "object",
        "properties": {
          "accountNumber": {
            "type": "string",
            "description": "Beneficiary's account number."
          },
          "sortCode": {
            "type": "string",
            "description": "Beneficiary's sort code."
          },
          "names": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Names of the beneficiaries that are on the cheque."
          }
        },
        "description": "Information about the cheque's beneficiary."
      },
      "chequeImages": {
        "type": "object",
        "properties": {
          "frontImage": {
            "type": "string",
            "description": "The front image of the cheque."
          },
          "backImage": {
            "type": "string",
            "description": "The back image of the cheque."
          },
          "imageType": {
            "enum": [
              "tiff", "jpeg"
            ],
            "type": "string",
            "description": "The cheque image type."
          }
        },
        "description": "Cheque image information."
      },
      "deposit": {
        "type": "object",
        "properties": {
          "beneficiary": {
            "$ref": "#/components/schemas/beneficiary"
          },
          "chequeAmount": {
            "type": "number",
            "description": "Cheque amount in pounds sterling, up to two decimal places.",
            "format": "decimal",
            "default": 0
          },
          "chequeImages": {
            "$ref": "#/components/schemas/chequeImages"
          }
        },
        "description": "Object describing the cheque to be deposited."
      },
      "ProblemDetails": {
        "description": "Properties of a given error",
        "type": "object",
        "required": [
          "type",
          "title"
        ],
        "properties": {
          "detail": {
            "description": "A human-readable description of the problem unique to the instance of the problem. The reader must be able to discern the cause of the problem from this information.\n",
            "type": "string"
          },
          "errors": {},
          "instance": {
            "description": "A URI that uniquely identifies the problem being reported. This value should be consistent and deterministic in order to promote automated processing when read in client software\n",
            "type": "string"
          },
          "status": {
            "description": "The HTTP response code returned by the API. This is returned to allow for processing by distributed software agents and MUST match that reported in the transport layer\n",
            "type": "string"
          },
          "title": {
            "description": "A short, human-readable summary of the problem type that should not change between different occurrences of a given problem",
            "type": "string"
          },
          "type": {
            "description": "A URI that uniquely identifies the problem type being reported",
            "type": "string"
          }
        }
      },
      "submitDepositRequest": {
        "type": "object",
        "properties": {
          "deposit": {
            "$ref": "#/components/schemas/deposit"
          },
          "messageId": {
            "type": "string",
            "description": "Message ID"
          }
        },
        "description": "Submit deposit request."
      },
      "submitDepositResponse": {
        "type": "object",
        "properties": {
          "messageId": {
            "type": "string",
            "description": "Message ID"
          },
          "status": {
            "enum": [
              "accepted",
              "rejected",
              "error"
            ],
            "type": "string",
            "description": "Status"
          }
        },
        "description": "Submit deposit response"
      }
    }
  }
}