          "buildingNameNumber",
          "countryCode",
          "postalCode",
          "streetName"
        ],
        "type": "object",
        "properties": {
          "buildingNameNumber": {
            "maxLength": 40,
            "minLength": 1,
            "pattern": "^[a-zA-Z0-9\\-',.() ]+$",
            "type": "string",
            "example": "22(A)",
            "description": "The name or number of the customer's home at their address."
          },
          "streetName": {
            "maxLength": 50,
            "minLength": 1,
            "pattern": "^[a-zA-Z0-9\\-',.() ]+$",
            "type": "string",
            "example": "Long Road",
            "description": "The street of the customer's address."
          },
          "city": {
            "maxLength": 40,
            "pattern": "^[a-zA-Z0-9\\-',.() ]+$",
            "type": "string",
            "nullable": true,
            "example": "York",
            "description": "The postal city of the customer's address."
          },
          "county": {
            "maxLength": 40,
            "pattern": "^[a-zA-Z0-9\\-',.() ]+$",
            "type": "string",
            "nullable": true,
            "example": "Yorkshire",
            "description": "The county of the customer's address."
          },
          "postalCode": {
            "maxLength": 10,
            "minLength": 1,
            "pattern": "^[a-zA-Z0-9 ]+$",
            "type": "string",
            "example": "YO31 7UH",
            "description": "The postal code of the customer's address."
          },
          "countryCode": {
